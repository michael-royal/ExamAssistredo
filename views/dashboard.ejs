<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
<%- include('./partials/preloader.ejs') %>
    
<%- include('./partials/authheader.ejs') %>

    <main class="py-4">
        <div class="container">
            <!-- Welcome Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card bg-gradient border-0">
                        <div class="card-body p-4">
                            <h1 class="card-title mb-2">Welcome back, <span><%= username%></span>!</h1>
                            <p class="card-text">Ready to ace your next exam? Let's get started with your study session.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <a href="/reviews" class="card text-center border-0 shadow-sm" style="text-decoration: none;">
                        <div class="card-body">
                            <i class="bi bi-chat-left-text display-4 text-primary mb-2"></i>
                            <h5 class="card-title" id="pastQuestionsCount">Reviews</h5>
                            <p class="card-text text-muted">Write a review</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="/userList" class="card text-center border-0 shadow-sm" style="text-decoration: none;">
                        <div class="card-body">
                            <i class="bi bi-person-lines-fill display-4 text-warning mb-2"></i>
                            <h5 class="card-title" id="quizzesTaken">User list</h5>
                            <p class="card-text text-muted">View users</p>
                        </div>
                    </a>
                </div>
               
                <div class="col-md-4 mb-3">
                    <a class="card text-center border-0 shadow-sm" href="/profile" style="text-decoration: none;">
                        <div class="card-body">
                            <i class="bi bi-person-fill display-4 text-info mb-2"></i>
                            <h5 class="card-title" id="communityPosts"><%= username %></h5>
                            <p class="card-text text-muted">View Profile</p>
                        </div>
                    </a>
                </div>
                
            </div>

            <!-- Quick Actions -->
            <div class="row mb-4">
                <div class="col-12">
                    <h3 class="mb-3">Quick Actions</h3>
                </div>
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card feature-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-play-circle display-4 text-primary mb-3"></i>
                            <h5 class="card-title">Take Quiz</h5>
                            <p class="card-text">Start a new timed quiz session</p>
                            <a href="quiz.html" class="btn btn-primary">Start Quiz</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card feature-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-file-earmark-plus display-4 text-success mb-3"></i>
                            <h5 class="card-title">Browse Questions</h5>
                            <p class="card-text">Access past examination papers</p>
                            <a href="past-questions.html" class="btn btn-success">Browse</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card feature-card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-chat-dots display-4 text-info mb-3"></i>
                            <h5 class="card-title">AI Assistant</h5>
                            <p class="card-text">Get help from our study bot</p>
                            <a href="chatbot.html" class="btn btn-info">Chat Now</a>
                        </div>
                    </div>
                </div>

            </div>

            
        </div>
    </main>



<%- include('./partials/scripts.ejs') %>
</body>
</html>